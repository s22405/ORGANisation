<main>
  <h2>Edit Organ</h2>
  <form class="form" novalidate onsubmit="return validateForm()">

    <label for="Name">Name:  <span class="symbol-required">*</span></label>
    <input type="text" name="Name" id="Name" value="Heart" required />
    <span id="errorName" class="errors-text"></span>

    <label for="Price">Price:  <span class="symbol-required">*</span></label>
    <input type="number" step="0.01" name="Price" id="Price" value="99.99" min="0" max="99999.99" required />
    <span id="errorPrice" class="errors-text"></span>

    <div class="form-buttons">
      <p id="errorsSummary"></p>
      <input type="submit" value="Submit" class="form-button-submit" />
      <a href="/organs" class="form-button-cancel">Cancel</a>
    </div>

  </form>
</main>

