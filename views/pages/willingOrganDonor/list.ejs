<%- include('../../fragment/header.ejs') %>

<main>
    <h2>List of WILLING Organ Donors</h2>
    <% if(loggedUser) {%>
    <table class="table-list">
        <thead>
            <tr>
                <th>Name</th>
                <th>CellNumber</th>
                <th>PatientFrom</th>
                <th>PatientTill</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for (let willingOrganDonor of willingOrganDonors) { %>
                <tr>
                    <td><%= willingOrganDonor.name%></td>
                    <td><%= willingOrganDonor.cellNumber%></td>
                    <td><%= willingOrganDonor.patientFrom.toISOString().split('T')[0] %></td>
                    <td><%= willingOrganDonor.patientTill ? willingOrganDonor.patientTill.toISOString().split('T')[0] : '' %></td>
                    <td>
                        <ul class="list-actions">
                            <li><a href="/willingOrganDonors/details/<%=willingOrganDonor._id%>" class="list-actions-button-details">Details</a>
                            </li>
                            <li><a href="/willingOrganDonors/edit/<%=willingOrganDonor._id%>" class="list-actions-button-edit">Edit</a>
                            </li>
                            <li><a href="/willingOrganDonors/delete/<%=willingOrganDonor._id%>" class="list-actions-button-delete">Delete</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <p><a href="/willingOrganDonors/add" class="button-add">Add a new WILLING Organ Donor</a></p>
    <%} else {%>
        <h5>Log in to see more details</h5>
    <%}%>
</main>

<%- include('../../fragment/footer.ejs') %>