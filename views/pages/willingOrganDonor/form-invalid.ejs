<%- include('../../fragment/header.ejs') %>

<main>
    <h2>New WILLING Organ Donor</h2>
    <form class="form">
        <label for="Name">Name:  <span class="symbol-required">*</span></label>
        <input type="text" name="Name" id="Name" class="error-input" placeholder="1-200 characters" required />
        <span id="errorName" class="errors-text">Field is required</span>

        <label for="CellNumber">CellNumber:  <span class="symbol-required">*</span></label>
        <input type="number" name="CellNumber" id="CellNumber" min="1" max="99" class="error-input" placeholder="1-99" required />
        <span id="errorCellNumber" class="errors-text">Field is required</span>

        <label for="PatientFrom">PatientFrom:  <span class="symbol-required">*</span></label>
        <input type="date" name="PatientFrom" id="PatientFrom" class="error-input" required />
        <span id="errorPatientFrom" class="errors-text">Field is required</span>

        <label for="PatientTill">PatientTill:</label>
        <input type="date" name="PatientTill" id="PatientTill" class="error-input"/>
        <span id="errorPatientTill" class="errors-text">Field is required</span>

        <div class="form-buttons">
            <p id="errorsSummary" class="errors-text">Form contains errors</p>
            <input type="submit" value="Submit" class="form-button-submit" />
            <a href="list.ejs" class="form-button-cancel">Cancel</a>
        </div>

    </form>
</main>

