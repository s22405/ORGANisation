<%- include('../../fragment/header.ejs') %>

<main>
    <h2>List of Organs</h2>
    <% if(loggedUser) {%>
    <table class="table-list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for (let organ of organs) { %>
                <tr>
                    <td><%= organ.name %></td>
                    <td><%= organ.price %></td>
                    <td>
                        <ul class="list-actions">
                            <li><a href="/organs/details/<%=organ._id%>" class="list-actions-button-details">Details</a></li>
                            <li><a href="/organs/edit/<%=organ._id%>" class="list-actions-button-edit">Edit</a></li>
                            <li><a href="/organs/delete/<%=organ._id%>" class="list-actions-button-delete">Delete</a></li>
                        </ul>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <p><a href="/organs/add" class="button-add">Add a new Organ</a></p>
    <%} else {%>
        <h5>Log in to see more details</h5>
    <%}%>
</main>

<%- include('../../fragment/footer.ejs') %>